<% layout('layouts/boilerplate') -%>
<a class="btn btn-primary offset-0 mb-2" href="/campgrounds">Back to all campgrounds</a>
    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds/<%=campground._id%>?_method=PUT" class="needs-validation" novalidate
                method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" value="<%=campground.title%>" id="title" name="title"
                        required />
                </div>

                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" class="form-control" value="<%=campground.location%>" name="location"
                        id="location" required />
                </div>

                <div class="mb-3">
                    <label for="price" class="form-label">Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="inputGroupPrepend">$</span>
                        <input type="number" class="form-control" value="<%=campground.price%>" name="price" id="price"
                            placeholder="0.00" required />
                    </div>
                </div>
             
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <input type="text" class="form-control" value="<%=campground.description%>" name="description"
                        id="description" required />
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Add more picture</label>
                    <input class="form-control" type="file" id="image" name="image" multiple>
                  </div>

                <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner ">
                        <%campground.images.forEach((image, i)=> {%>

                            <div class="carousel-item  <%= i === 0 ? 'active' : '' %>">
                                <img src="<%=image.path%>" class="d-block w-100" id="resizeImg" />
                                <div class="form-check-inline d-flex justify-content-center">
                                    <div>
                                        <label for="img<%=i%>">Delete</label>
                                        <input type="checkbox" id="img<%=i%>" name="deleteImage[]" value="<%=image.filename%>" />
                                    </div>
                                </div>
                            </div>
                            <%})%>
                                <% if(campground.images.length> 1){%>
                                    <button class="carousel-control-prev" type="button" 
                                        data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                        <span class="visually-hidden">Previous</span>
                                    </button>
                                    <button class="carousel-control-next" type="button"
                                        data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                        <span class="visually-hidden">Next</span>
                                    </button>
                                    <%}%>
                    </div>
                </div>

                <button type="submit" class="btn btn-warning">Update Campground</button>
            </form>
        </div>
    </div>